{
    "name": "nexus-ui-framework",
    "version": "0.1.0",
    "scripts": {
        "build:css": "postcss src/main.css -o dist/nexus.min.css",
        "build:js": "esbuild src/js/main.js --bundle --minify --outfile=dist/nexus.bundle.js",
        "//": "Run SVGO on the folder (-f) first, then bundle them",
        "build:icons": "svgo -f src/icons && svgstore -o dist/nexus-icons.svg src/icons/*.svg",
        "build": "npm run build:css && npm run build:js && npm run build:icons"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.16",
        "cssnano": "^6.0.1",
        "esbuild": "^0.27.0",
        "postcss": "^8.4.31",
        "postcss-cli": "^10.1.0",
        "postcss-import": "^15.1.0",
        "save-dev": "^0.0.1-security",
        "svgo": "^4.0.0",
        "svgstore-cli": "^2.0.1"
    }
}
